<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Symfony2 Translations Editor</title>
    <meta name="description" content="">
    <meta name="author" content="">
    {% javascripts
        '@ServerGroveTranslationEditorBundle/Resources/public/js/vendors/jquery1.7.1.min.js'
        '@ServerGroveTranslationEditorBundle/Resources/public/js/vendors/json2.js'
        '@ServerGroveTranslationEditorBundle/Resources/public/js/vendors/underscore-min.js'
        '@ServerGroveTranslationEditorBundle/Resources/public/js/vendors/backbone.js'
        '@ServerGroveTranslationEditorBundle/Resources/public/js/vendors/ich.js'
        '@ServerGroveTranslationEditorBundle/Resources/public/js/*'
        %}<script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>

    <!-- Le styles -->
      <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css">
    <style type="text/css">
      body {
        padding-top: 60px;
      }
    </style>

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
  </head>

  <body>
    <div class="topbar">
      <div class="topbar-inner">
        <div class="container-fluid">
          <a class="brand" href="#">Symfony2 Translation Editor</a>
          <ul class="nav">
            <li><a href="#" onclick="$('.alert-message').hide();$('#newtranslation').show()">New Entry</a></li>
            <li><a href="#" onclick="this.innerHTML = 'Reloading...';window.location.reload()">Reload List</a></li>
            <li><a href="https://github.com/servergrove/TranslationEditorBundle">About</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="sidebar">
        <div class="well">
          <h5>Available Bundles</h5>
          <ul>
              {% for bundle in bundles %}
              <li>
                  <a href="{{path('sg_localeditor_editbundle', {bundle: bundle})}}">{{bundle}}</a>
              </li>
              {%endfor%}
          </ul>
          <h5>Available Locales</h5>
          <ul>
              {% for locale in locales %}
              <li>{{locale}}
                  {% if locale == default %}<span class="label">Default</span>{%endif%}
              </li>
              {%endfor%}
          </ul>
        {% block sidebar %}
        {% endblock %}

        </div>
      </div>
      <div class="content">
          {% block body %}
          {% endblock %}
    </div>
    </div>

  </body>

</html>